<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sectionHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/md_theme_onPrimaryContainer</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:paddingStart">@dimen/double_padding</item>
        <item name="android:paddingEnd">@dimen/double_padding</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="representativeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_padding</item>
        <item name="android:background">@color/md_theme_surfaceVariant</item>
        <item name="android:minHeight">@dimen/min_clickable_height</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="election_title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="election_date" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="representative_office_name" parent="TextAppearance.AppCompat.Body2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">@dimen/double_padding</item>
        <item name="android:paddingEnd">@dimen/double_padding</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="representative_name" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">@dimen/double_padding</item>
        <item name="android:paddingEnd">@dimen/double_padding</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="representative_party" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:paddingStart">@dimen/double_padding</item>
        <item name="android:paddingEnd">@dimen/double_padding</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="election_name" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/md_theme_onSecondaryContainer</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="election_date_header" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_padding</item>
        <item name="android:layout_marginEnd">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">@dimen/double_padding</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="election_information" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_theme_onSecondaryContainer</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="election_button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:minHeight">@dimen/min_clickable_height</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="state_correspondence" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/double_padding</item>
        <item name="android:layout_marginBottom">@dimen/double_padding</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="state_correspondence_address" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/double_padding</item>
        <item name="android:layout_marginBottom">@dimen/double_padding</item>
        <item name="android:fontFamily">@font/merriweather_sans</item>
    </style>

    <style name="election_information_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/double_padding</item>
        <item name="android:background">@color/md_theme_primaryContainer</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <!-- COMPLETED: Add necessary styles -->

</resources>
